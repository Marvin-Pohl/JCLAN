<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
 
        <name>JClan</name>
        <!-- The following elements are optional and free of formatting constraints -->
        <creationDate>August 2012</creationDate>
        <author>Marvin Pohl</author>
        <authorEmail>info@MindYourByte.de</authorEmail>
        <authorUrl>http://www.MindYourByte.de</authorUrl>
        <copyright>--</copyright>
        <license>---</license>
        <!--  The version string is recorded in the components table -->
        <version>0.0.5</version>
        <!-- The description is optional and defaults to the name -->
        <description>Tool for a Clan Website</description>
 
        <install> <!-- Runs on install -->
                <sql>
                        <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
                        <file driver="mysql" charset="utf8">sql/sampledata.mysql.utf8.sql</file>
                </sql>
        </install>
        <uninstall> <!-- Runs on uninstall -->
                <sql>
                        <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
                </sql>
        </uninstall>
        <update> <!-- Runs on update; New in 2.5 -->
                <schemas>
                        <schemapath type="mysql">sql/updates/mysql</schemapath>
                </schemas>
        </update>
 
        <!-- Site Main File Copy Section -->
        <!-- Note the folder attribute: This attribute describes the folder
                to copy FROM in the package to install therefore files copied
                in this section are copied from /site/ in the package -->
        <files folder="site">
                <filename>index.html</filename>
                <filename>jclan.php</filename>
                <filename>controller.php</filename>
                <folder>views</folder>
                <folder>models</folder>
        </files>
 
        <administration>
                <!-- Administration Menu Section -->
                <menu>JClan</menu>
                <submenu>
                    <menu task="list_teams" img="">LIST_TEAMS</menu>
                    <menu task="list_players" img="">LIST_PLAYERS</menu>
                    <menu task="list_matches" img="">LIST_MATCHES</menu>
                    <menu task="list_lineups" img="">LIST_LINEUPS</menu>
                    <menu task="list_games" img="">LIST_GAMES</menu>
                    <menu task="list_maps" img="">LIST_MAPS</menu>
                    <menu task="list_seasons" img="">LIST_SEASONS</menu>
                </submenu>
                <!-- Administration Main File Copy Section -->
                <!-- Note the folder attribute: This attribute describes the folder
                        to copy FROM in the package to install therefore files copied
                        in this section are copied from /admin/ in the package -->
                <files folder="admin">
                        <!-- Admin Main File Copy Section -->
                        <filename>index.html</filename>
                        <filename>jclan.php</filename>
                        <filename>controller.php</filename>
                        <!-- SQL files section -->
                       <folder>sql</folder>
                       <folder>models</folder>
                       <folder>views</folder>
                       <folder>controllers</folder>
                       <folder>language</folder>
                       <folder>tables</folder>
                </files>
                <languages folder="admin">
                        <language tag="en-GB">language/en-GB/en-GB.com_jclan.ini</language>
                        <language tag="en-GB">language/en-GB/en-GB.com_jclan.sys.ini</language>
                </languages>
        </administration>
 
</extension>